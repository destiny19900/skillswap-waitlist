# Firebase Configuration - client-side variables need NEXT_PUBLIC
NEXT_PUBLIC_FIREBASE_API_KEY=your-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your-measurement-id

# Server-side Firebase Admin SDK config (no NEXT_PUBLIC needed)
# These values must be properly quoted and escaped!
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com
# The private key must be properly formatted with real newlines, not literal \n characters
# Either paste as a single line with proper escaping, or use multi-line string format (preferred)
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----
MIIEvAIBad...
...
...base64-encoded-key-data...
...
...more-key-data==
-----END PRIVATE KEY-----"

# IMPORTANT: Alternative single-line format - the \n must be converted to actual newlines when used
# FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nMIIEvAIB...\n...more-key-data==\n-----END PRIVATE KEY-----\n"

# Storage bucket (optional)
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com

# SMTP Configuration (optional, for email functionality)
SMTP_HOST=mail.example.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=user@example.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=Your App <noreply@example.com>

# Admin Configuration
ADMIN_PASSWORD=your-secure-admin-password
ADMIN_API_KEY=your-secure-api-key-for-server-requests 